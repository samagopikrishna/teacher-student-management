<div class="container">
  <h1 class="h1">Student Details</h1>
  <span style="visibility: hidden">TeachersID is :{{teacherId}}</span>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">id</th>
        <th scope="col">First Name</th>
        <th scope="col">Last Name</th>
        <th scope="col">age</th>
        <th scope="col">gender</th>
        <th scope="col">Maths</th>
        <th scope="col">English</th>
        <th scope="col">Science</th>
        <th scope="col">Tamil</th>
        <th scope="col">action</th>
      </tr>
    </thead>
    <tbody>
      {{#each data}}
      <tr>

        <th scope="row">{{this.id}}</th>
        <td>{{this.firstName}}</td>
        <td>{{this.lastName}}</td>

        <td>{{this.age}}</td>
        <td>{{this.gender}}</td>
        <td>{{this.math}}</td>
        <td>{{this.english}}</td>
        <td>{{this.science}}</td>
        <td>{{this.tamil}}</td>

        <td><a href="/edit-students/{{../teacherId}}/{{this.id}}">Edit</a></td>
      </tr>
      {{/each}}


    </tbody>
  </table>

  <a href="/add-students/{{teacherId}}" class=" btn btn-primary btn-lg">Add Student</a>
</div>